var bottles;

    for (counter = 99; counter >= 1; counter = counter - 1) {
        if (counter == 1) {
            bottles = 'bottle';
        } else {
            bottles = 'bottles';
        }
        console.log (counter + " " + bottles + " of beer on the wall.");
        if (counter < 99) {
            return ("");
            return(counter + " " + bottles + " of beer on the wall.");
        }
        return(counter + " " + bottles + " of beer.");
        return("Take one down.");
        return("Pass it around.");
        if (counter == 1) {
            return("No bottles of beer on the wall.");
        }
    }


$("sing-a-song").onclick = function() {myFunction()};

